{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node", "multer", "jest"],

    /* Module & Target */
    "target": "ES2020",
    "module": "commonjs",                // gunakan CommonJS
    "moduleResolution": "node",          // resolution untuk Node.js
    "esModuleInterop": true,             // biar bisa import express dengan default import
    "allowSyntheticDefaultImports": true,

    /* Other Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Stricter Typechecking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Style Options */
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,

    /* Node & Libs */
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
