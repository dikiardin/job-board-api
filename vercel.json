{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/index.ts": { "runtime": "nodejs20.x" },
    "api/cron/subscription.ts": { "runtime": "nodejs20.x" },
    "api/cron/interview.ts": { "runtime": "nodejs20.x" }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ],
  "crons": [
    { "path": "/api/cron/subscription", "schedule": "0 1 * * *" },
    { "path": "/api/cron/interview", "schedule": "0 7 * * *" }
  ]
}
